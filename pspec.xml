        <Files>
            <Path fileType="library">/usr/lib/lib*.so.[0-9]</Path>
            <Path fileType="library">/usr/lib/lib*.so.*.*.*</Path>
            <Path fileType="library">/usr/lib/babl-0.1/*.so</Path>
            <Path fileType="doc">/usr/share/doc</Path>
